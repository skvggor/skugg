---
export interface Props {
  data: {
    title: string
    tagline: string
  }
}

const { data } = Astro.props
---
<div class="site-name">
  <div class="panel">
    <h1 class="text">{data.title}</h1>
    <span class="cursor"></span>
  </div>

  <div class="tagline">
    <h2 class="text">{data.tagline}</h2>
  </div>
</div>

<style lang="styl">
  primary = #55A0E6

  .panel
    align-items center
    color #fff
    display flex
    justify-content center
    position relative

    .text
      background linear-gradient(primary, #000)
      font-size 50px
      font-weight 800
      margin 0 0 15px
      position relative
      -webkit-background-clip text
      -webkit-text-fill-color transparent

      @media (min-width: 1024px)
        font-size 90px
        margin 0 0 25px

  .cursor
    animation cursor 1.2s infinite
    background-color primary
    height 50px
    margin-left 6px
    width 6px

    @media (min-width: 1024px)
      height 90px
      margin-left 10px
      width 10px

  @keyframes cursor
    0%
      opacity 1
    50%
      opacity 0
    100%
      opacity 1

  .tagline
    align-items center
    color #fff
    display flex
    flex-direction column
    justify-content center
    text-align center

    .text
      font-size 20px
      font-weight 300
      margin 0
      max-width 440px

      @media (min-width: 1024px)
        font-size 30px
        max-width 700px
</style>



